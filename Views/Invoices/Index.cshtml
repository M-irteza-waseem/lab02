@model IEnumerable<HF_super_mart.Models.Invoice>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>ALL Invoices</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Invoice_date)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Invoice_time)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Category.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Customer.First_Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Product.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Price.Product_Price)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Invoice_date)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Invoice_time)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Category.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Customer.First_Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Product.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Price.Product_Price)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Invoice_Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Invoice_Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Invoice_Id })
        </td>
    </tr>
}

</table>
